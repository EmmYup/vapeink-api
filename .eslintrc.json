{
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    ".eslintrc-sails",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "trailingComma": "es5" }
    ]
  }
}
